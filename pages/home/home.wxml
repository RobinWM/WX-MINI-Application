<!--pages/home/home.wxml-->
<!-- 1.小程序数据绑定：{{}}，Mustache语法 -->
<view>Hello {{name}}</view>
<view>我的年龄：{{age}}</view>

<!-- 2.列表展示: wx:for -->
<view wx:key="id" wx:for="{{students}}">{{item.name}}-{{item.age}}</view>


<!-- 3.事件监听改变data -->
<view>当前计数：{{counter}}</view>
<button size="mini" bindtap="handleBtnClick">+</button>